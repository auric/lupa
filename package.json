{
    "name": "lupa",
    "displayName": "ðŸ” Lupa",
    "publisher": "auric",
    "repository": "https://github.com/auric/lupa",
    "description": "A VS Code extension for comprehensive pull request analysis using GitHub Copilot models",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.107.0",
        "node": ">=20"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "extensionDependencies": [
        "vscode.git"
    ],
    "contributes": {
        "commands": [
            {
                "command": "lupa.analyzePR",
                "title": "Lupa: Analyze Pull Request"
            },
            {
                "command": "lupa.showLanguageModelsInfo",
                "title": "Lupa: Show Language Models Info"
            },
            {
                "command": "lupa.selectLanguageModel",
                "title": "Lupa: Select Language Model"
            },
            {
                "command": "lupa.selectRepository",
                "title": "Lupa: Select Git Repository"
            },
            {
                "command": "lupa.resetAnalysisLimits",
                "title": "Lupa: Reset Analysis Limits to Defaults"
            },
            {
                "command": "lupa.openToolTesting",
                "title": "Lupa: Open Tool Testing Interface"
            },
            {
                "command": "lupa.testWebview",
                "title": "Lupa: Test Webview (Development)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "build": "npm run check-types && npm run build:node && npm run build:webview",
        "build:node": "vite build --mode development",
        "build:webview": "cross-env BUILD_TARGET=webview vite build --mode development",
        "watch": "npm run check-types && npm run build:node && npm run build:webview",
        "package": "npm run clean && npm run check-types && npm run package:node && npm run package:webview",
        "package:node": "vite build --mode production",
        "package:webview": "cross-env BUILD_TARGET=webview vite build --mode production",
        "pretest": "npm run check-types",
        "check-types": "tsc --noEmit",
        "clean": "rimraf -g ./*.vsix && rimraf ./dist",
        "test": "npx vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@vscode/ripgrep": "^1.17.0"
    },
    "devDependencies": {
        "@radix-ui/react-accordion": "^1.2.12",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.13.8",
        "@types/picomatch": "^4.0.2",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@types/vscode": "^1.107.0",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.16",
        "@vscode/vsce": "^3.7.1",
        "babel-plugin-react-compiler": "^1.0.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cross-env": "^10.1.0",
        "fdir": "^6.5.0",
        "ignore": "^7.0.5",
        "jsdom": "^27.3.0",
        "json-edit-react": "^1.29.0",
        "lucide-react": "^0.562.0",
        "picomatch": "^4.0.3",
        "react": "^19.2.3",
        "react-diff-view": "^3.3.2",
        "react-dom": "^19.2.3",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^16.1.0",
        "rehype-highlight": "^7.0.2",
        "remark-gfm": "^4.0.1",
        "rimraf": "^6.1.2",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "uuid": "^13.0.0",
        "vite": "^7.3.0",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.16",
        "zod": "^4.2.1"
    }
}
