{
    "name": "lupa",
    "displayName": "ðŸ” Lupa",
    "publisher": "auric",
    "repository": "https://github.com/auric/lupa",
    "license": "AGPL-3.0-or-later",
    "description": "A VS Code extension for comprehensive pull request analysis using GitHub Copilot models",
    "version": "0.1.3",
    "engines": {
        "vscode": "^1.107.0",
        "node": ">=20"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "extensionDependencies": [
        "vscode.git"
    ],
    "contributes": {
        "commands": [
            {
                "command": "lupa.analyzePR",
                "title": "Lupa: Analyze Pull Request"
            },
            {
                "command": "lupa.selectLanguageModel",
                "title": "Lupa: Select Language Model"
            },
            {
                "command": "lupa.selectRepository",
                "title": "Lupa: Select Git Repository"
            },
            {
                "command": "lupa.resetAnalysisLimits",
                "title": "Lupa: Reset Analysis Limits to Defaults"
            },
            {
                "command": "lupa.openToolTesting",
                "title": "Lupa: Open Tool Testing Interface"
            },
            {
                "command": "lupa.testWebview",
                "title": "Lupa: Test Webview (Development)"
            }
        ],
        "chatParticipants": [
            {
                "id": "lupa.chat-participant",
                "name": "lupa",
                "fullName": "Lupa Code Review",
                "description": "Analyze pull requests and code changes",
                "isSticky": true,
                "commands": [
                    {
                        "name": "branch",
                        "description": "Analyze current branch vs default branch"
                    },
                    {
                        "name": "changes",
                        "description": "Analyze uncommitted changes"
                    }
                ]
            }
        ],
        "languageModelTools": [
            {
                "name": "lupa_getSymbolsOverview",
                "displayName": "Get Symbols Overview",
                "modelDescription": "Get a comprehensive overview of all symbols (classes, functions, methods, interfaces, properties) defined in a file or directory with their line numbers and hierarchy. Unlike workspace symbol search which returns flat results, this tool provides a structured hierarchical view showing parent-child relationships. Use for understanding file structure, finding entry points, or analyzing code organization. Supports filtering by symbol type and hierarchy depth control.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "symbolsOverview",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path to the file or directory (e.g., 'src/services' or 'src/tools/findSymbolTool.ts')"
                        },
                        "max_depth": {
                            "type": "integer",
                            "description": "Symbol hierarchy depth: 0=top-level only, 1=include direct children, -1=unlimited",
                            "default": 0
                        },
                        "include_body": {
                            "type": "boolean",
                            "description": "Include symbol source code (warning: significantly increases response size)",
                            "default": false
                        },
                        "include_kinds": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Include only these symbol types: 'class', 'function', 'method', 'interface', 'property', 'variable', 'constant', 'enum'"
                        },
                        "exclude_kinds": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Exclude these symbol types. Takes precedence over include_kinds."
                        },
                        "max_symbols": {
                            "type": "integer",
                            "description": "Maximum number of symbols to return",
                            "default": 100
                        },
                        "show_hierarchy": {
                            "type": "boolean",
                            "description": "Show indented hierarchy structure (true) vs flat list (false)",
                            "default": true
                        }
                    },
                    "required": [
                        "path"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "build": "npm run check-types && npm run build:node && npm run build:webview",
        "build:node": "vite build --mode development",
        "build:webview": "cross-env BUILD_TARGET=webview vite build --mode development",
        "watch": "npm run check-types && npm run build:node && npm run build:webview",
        "package": "npm run clean && npm run check-types && npm run package:node && npm run package:webview",
        "package:node": "vite build --mode production",
        "package:webview": "cross-env BUILD_TARGET=webview vite build --mode production",
        "package:vsix": "node scripts/package-extension.js",
        "licenses:generate": "license-report --output=markdown > THIRD_PARTY_LICENSES.md",
        "licenses:check": "license-checker --summary",
        "pretest": "npm run check-types",
        "check-types": "tsc --noEmit && npm run lint",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix && prettier --write src/**/*.{ts,tsx} __mocks__/*.{ts,js}",
        "clean": "rimraf -g ./*.vsix && rimraf ./dist",
        "test": "npx vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@radix-ui/react-accordion": "^1.2.12",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.13.8",
        "@types/picomatch": "^4.0.2",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@types/vscode": "^1.107.0",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.16",
        "@vscode/vsce": "^3.7.1",
        "babel-plugin-react-compiler": "^1.0.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cross-env": "^10.1.0",
        "fdir": "^6.5.0",
        "ignore": "^7.0.5",
        "jsdom": "^27.3.0",
        "json-edit-react": "^1.29.0",
        "license-checker": "^25.0.1",
        "license-report": "^6.8.1",
        "lucide-react": "^0.562.0",
        "oxlint": "^1.35.0",
        "picomatch": "^4.0.3",
        "prettier": "^3.7.4",
        "react": "^19.2.3",
        "react-diff-view": "^3.3.2",
        "react-dom": "^19.2.3",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^16.1.0",
        "rehype-highlight": "^7.0.2",
        "remark-gfm": "^4.0.1",
        "rimraf": "^6.1.2",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "uuid": "^13.0.0",
        "vite": "^7.3.0",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.16",
        "zod": "^4.2.1"
    }
}